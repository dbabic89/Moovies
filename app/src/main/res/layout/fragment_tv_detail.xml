<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.android.moovies.ui.tv_detail.TvDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/view_mtv_header"
            layout="@layout/view_mtv_header" />

        <include
            android:id="@+id/view_mtv_buttons"
            layout="@layout/view_mtv_buttons" />

        <include
            android:id="@+id/view_mtv_images_n_videos"
            layout="@layout/view_mtv_images_n_videos" />

        <include
            android:id="@+id/view_mtv_credits"
            layout="@layout/view_mtv_credits" />

        <include
            android:id="@+id/view_mtv_info"
            layout="@layout/view_mtv_info" />

        <FrameLayout
            android:id="@+id/similar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="-8dp"
            android:visibility="gone"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <include
            android:id="@+id/view_mtv_keywords"
            layout="@layout/view_mtv_keywords" />

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
